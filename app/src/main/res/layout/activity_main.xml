<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:background="@color/white"
        android:hint="Email Adresiniz"
        android:inputType="textEmailAddress"
        android:textColor="#000"
        />

    <EditText
        android:id="@+id/parola"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_marginVertical="14dp"
        android:background="@color/white"
        android:hint="Parolanız"
        android:inputType="textPassword"
        android:textColor="#000"
        />
    <Button
        android:id="@+id/girisyap"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/parola"
        android:layout_marginVertical="14dp"
        android:background="@color/colorPrimary"
        android:text="Giriş Yap"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/kayitol"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="14dp"
        app:layout_constraintTop_toBottomOf="@id/girisyap"
        android:layout_marginVertical="16dp"
        android:background="@color/colorPrimary"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Kayıt Ol" />

</android.support.constraint.ConstraintLayout>